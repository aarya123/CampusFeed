        <activity
            android:name="com.example.campusfeed.Tab1"
            android:label="title_activity_today" >
        </activity>
        <activity
            android:name="com.example.campusfeed.Tab2"
            android:label="title_activity_popular" >
        </activity>
        <activity
            android:name="com.example.campusfeed.Tab3"
            android:label="title_activity_more" >
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCtUqmZ2xaYZ4mdb5HwaZLsIxoJmoB1XcE" />

        <uses-library android:name="com.google.android.maps" />
    </application>

</manifest>